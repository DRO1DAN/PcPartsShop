@model PcPartsShopDomain.Model.Psu

@{
    ViewData["Title"] = "Edit PSU";
}

<h1 class="mb-3">Edit PSU</h1>

<div class="card shadow p-4">
    <form asp-action="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Wattage"></label>
            <input asp-for="Wattage" class="form-control" type="number" min="0" />
        </div>

        <div class="mb-3 form-check">
            <input class="form-check-input" asp-for="Modular" />
            <label class="form-check-label" asp-for="Modular">Modular</label>
        </div>

        <div class="mb-3">
            <label asp-for="Efficiency"></label>
            <input asp-for="Efficiency" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save PSU</button>
        <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-secondary">Back to Product</a>
    </form>
</div>
