@model PcPartsShopDomain.Model.Psu

@{
    ViewData["Title"] = "Create PSU";
}

<h1 class="mb-4">Create PSU</h1>

<div class="card shadow p-4">
    <form asp-action="Create">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Wattage"></label>
            <input asp-for="Wattage" class="form-control" type="number" min="0" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Modular" class="form-check-input" />
            <label asp-for="Modular" class="form-check-label"></label>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Efficiency"></label>
            <input asp-for="Efficiency" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Create PSU</button>
        <a asp-action="CleanupOrphanedProduct" asp-controller="Products" asp-route-productId="@Model.ProductId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
