@model PcPartsShopDomain.Model.Cpu

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cpu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ProductId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly="readonly" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Series" class="control-label"></label>
                <input asp-for="Series" class="form-control" />
                <span asp-validation-for="Series" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Generation" class="control-label"></label>
                <input asp-for="Generation" class="form-control" />
                <span asp-validation-for="Generation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cores" class="control-label"></label>
                <input asp-for="Cores" class="form-control" type="number" step="1"/>
                <span asp-validation-for="Cores" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Threads" class="control-label"></label>
                <input asp-for="Threads" class="form-control" type="number" step="1" />
                <span asp-validation-for="Threads" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BaseClock" class="control-label"></label>
                <input asp-for="BaseClock" class="form-control" type="number" step="0.01"/>
                <span asp-validation-for="BaseClock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BoostClock" class="control-label"></label>
                <input asp-for="BoostClock" class="form-control" type="number" step="0.01"/>
                <span asp-validation-for="BoostClock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cache" class="control-label"></label>
                <input asp-for="Cache" class="form-control" type="number"/>
                <span asp-validation-for="Cache" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SupportedMemoryType" class="control-label"></label>
                <input asp-for="SupportedMemoryType" class="form-control" />
                <span asp-validation-for="SupportedMemoryType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Socket" class="control-label"></label>
                <input asp-for="Socket" class="form-control" />
                <span asp-validation-for="Socket" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tdp" class="control-label"></label>
                <input asp-for="Tdp" class="form-control" type="number"/>
                <span asp-validation-for="Tdp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CleanupOrphanedProduct" asp-controller="Products" asp-route-productId="@Model.ProductId">Скасувати створення</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
