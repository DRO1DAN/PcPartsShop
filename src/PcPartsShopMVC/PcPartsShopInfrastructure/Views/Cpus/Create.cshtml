@model PcPartsShopDomain.Model.Cpu

@{
    ViewData["Title"] = "Create CPU";
}

<h1 class="mb-4">Create CPU</h1>

<div class="card shadow p-4">
    <form asp-action="Create">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">CPU Name</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Series" class="form-label">Series</label>
            <input asp-for="Series" class="form-control" />
            <span asp-validation-for="Series" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Generation" class="form-label">Generation</label>
            <input asp-for="Generation" class="form-control" />
            <span asp-validation-for="Generation" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="mb-3 col-md-6">
                <label asp-for="Cores" class="form-label">Cores</label>
                <input asp-for="Cores" class="form-control" type="number" min="1" />
                <span asp-validation-for="Cores" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label asp-for="Threads" class="form-label">Threads</label>
                <input asp-for="Threads" class="form-control" type="number" min="1" />
                <span asp-validation-for="Threads" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="BaseClock" class="form-label">Base Clock (GHz)</label>
            <input asp-for="BaseClock" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="BaseClock" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BoostClock" class="form-label">Boost Clock (GHz)</label>
            <input asp-for="BoostClock" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="BoostClock" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Cache" class="form-label">Cache (MB)</label>
            <input asp-for="Cache" class="form-control" type="number" min="0" />
            <span asp-validation-for="Cache" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SupportedMemoryType" class="form-label">Supported Memory</label>
            <input asp-for="SupportedMemoryType" class="form-control" />
            <span asp-validation-for="SupportedMemoryType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Socket" class="form-label">Socket</label>
            <input asp-for="Socket" class="form-control" />
            <span asp-validation-for="Socket" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Tdp" class="form-label">TDP (W)</label>
            <input asp-for="Tdp" class="form-control" type="number" min="0" />
            <span asp-validation-for="Tdp" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create CPU</button>
        <a asp-action="CleanupOrphanedProduct" asp-controller="Products" asp-route-productId="@Model.ProductId" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }
