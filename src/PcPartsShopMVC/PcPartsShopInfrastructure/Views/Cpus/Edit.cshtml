@model PcPartsShopDomain.Model.Cpu

@{
    ViewData["Title"] = "Edit CPU";
}

<h1 class="mb-4">Edit CPU</h1>

<div class="card shadow p-4">
    <form asp-action="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Series"></label>
            <input asp-for="Series" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Generation"></label>
            <input asp-for="Generation" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Cores"></label>
            <input asp-for="Cores" class="form-control" type="number" min="0" />
        </div>

        <div class="mb-3">
            <label asp-for="Threads"></label>
            <input asp-for="Threads" class="form-control" type="number" min="0" />
        </div>

        <div class="mb-3">
            <label asp-for="BaseClock"></label>
            <input asp-for="BaseClock" class="form-control" type="number" step="0.01" min="0" />
        </div>

        <div class="mb-3">
            <label asp-for="BoostClock"></label>
            <input asp-for="BoostClock" class="form-control" type="number" step="0.01" min="0" />
        </div>

        <div class="mb-3">
            <label asp-for="Cache"></label>
            <input asp-for="Cache" class="form-control" type="number" min="0" />
        </div>

        <div class="mb-3">
            <label asp-for="SupportedMemoryType"></label>
            <input asp-for="SupportedMemoryType" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Socket"></label>
            <input asp-for="Socket" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Tdp"></label>
            <input asp-for="Tdp" class="form-control" type="number" min="0" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-secondary">Back to Product</a>
    </form>
</div>
