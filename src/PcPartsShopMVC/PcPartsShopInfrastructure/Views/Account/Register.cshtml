@model PcPartsShopInfrastructure.Models.RegisterViewModel
@* Model directive MUST be the very first line *@

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    @* Add container for centering and top margin *@
    <div class="row justify-content-center">
        @* Center the column content horizontally *@
        <div class="col-md-8 col-lg-6">
            @* Slightly wider column for register form if needed, adjust as desired *@
            <div class="card shadow-sm">
                @* Add a card for visual grouping and subtle shadow *@
                <div class="card-header">
                    <h2 class="mb-0">@ViewData["Title"]</h2> @* Use card header for title *@
                </div>
                <div class="card-body">
                    <!-- Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mb-3">
                            @* Add margin bottom *@
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- Validation Error Summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>


                    <form asp-action="Register" method="post">
                        @* Use mb-3 for margin-bottom on form groups *@
                        <div class="row mb-3">
                            @* Optional: Put First/Last name side-by-side *@
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @* Add mb-3 for small screens, mb-sm-0 removes it on larger *@
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            @* Add top margin before button *@
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>
                    </form> @* Ensure the form tag is closed BEFORE the card-body ends usually *@
                </div> @* End card-body *@
                <div class="card-footer text-center">
                    @* Add a card footer for the link *@
                    <p class="mb-0">Already have an account? <a asp-action="Login">Login Here</a></p>
                </div>
            </div> @* End card *@
        </div> @* End col *@
    </div> @* End row *@
</div> @* End container *@

@* This section block MUST be at the top level, not nested *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}