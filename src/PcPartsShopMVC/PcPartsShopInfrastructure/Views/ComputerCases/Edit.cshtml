@model PcPartsShopDomain.Model.ComputerCase

@{
    ViewData["Title"] = "Edit Computer Case";
}

<h1 class="mb-4">Edit Computer Case</h1>

<div class="card shadow p-4">
    <form asp-action="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="FormFactor"></label>
            <input asp-for="FormFactor" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-secondary">Back to Product</a>
    </form>
</div>
