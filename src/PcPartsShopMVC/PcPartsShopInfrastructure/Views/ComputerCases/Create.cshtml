@model PcPartsShopDomain.Model.ComputerCase

@{
    ViewData["Title"] = "Create Computer Case";
}

<h1 class="mb-4">Create Computer Case</h1>

<div class="card shadow p-4">
    <form asp-action="Create">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="FormFactor"></label>
            <input asp-for="FormFactor" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Create Case</button>
        <a asp-action="CleanupOrphanedProduct" asp-controller="Products" asp-route-productId="@Model.ProductId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
