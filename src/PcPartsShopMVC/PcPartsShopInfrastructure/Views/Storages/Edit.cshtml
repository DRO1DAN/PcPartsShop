@model PcPartsShopDomain.Model.Storage

@{
    ViewData["Title"] = "Edit Storage";
}

<h1 class="mb-3">Edit Storage</h1>

<div class="card shadow p-4">
    <form asp-action="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Type" class="form-label"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Capacity" class="form-label">Capacity (GB)</label>
            <input asp-for="Capacity" class="form-control" type="number" min="0" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Interface" class="form-label"></label>
            <input asp-for="Interface" class="form-control" />
            <span asp-validation-for="Interface" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MemoryType" class="form-label">Memory Type</label>
            <input asp-for="MemoryType" class="form-control" />
            <span asp-validation-for="MemoryType" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Storage</button>
        <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-secondary">Back to Product</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
