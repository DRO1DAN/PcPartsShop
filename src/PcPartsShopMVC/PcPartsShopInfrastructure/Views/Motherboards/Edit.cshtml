@model PcPartsShopDomain.Model.Motherboard

@{
    ViewData["Title"] = "Edit Motherboard";
}

<h1 class="mb-3">Edit Motherboard</h1>

<div class="card shadow p-4">
    <form asp-action="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Socket"></label>
            <input asp-for="Socket" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Chipset"></label>
            <input asp-for="Chipset" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="FormFactor"></label>
            <input asp-for="FormFactor" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="MemorySlotsCount"></label>
            <input asp-for="MemorySlotsCount" class="form-control" type="number" min="0" />
        </div>

        <div class="mb-3">
            <label asp-for="MemoryType"></label>
            <input asp-for="MemoryType" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="MaxMemory"></label>
            <input asp-for="MaxMemory" class="form-control" type="number" min="0" />
        </div>

        <div class="mb-3">
            <label asp-for="PcieVersion"></label>
            <input asp-for="PcieVersion" class="form-control" />
        </div>

        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-primary">Save Motherboard</button>
        <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-secondary">Back to Product</a>
    </form>
</div>
