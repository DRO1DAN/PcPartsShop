@model PcPartsShopDomain.Model.Ram

@{
    ViewData["Title"] = "Edit RAM";
}

<h1 class="mb-3">Edit RAM</h1>

<div class="card shadow p-4">
    <form asp-action="Edit">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Capacity"></label>
            <input asp-for="Capacity" class="form-control" type="number" min="0" />
        </div>

        <div class="mb-3">
            <label asp-for="Speed"></label>
            <input asp-for="Speed" class="form-control" type="number" min="0" />
        </div>

        <div class="mb-3">
            <label asp-for="Type"></label>
            <input asp-for="Type" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save RAM</button>
        <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-secondary">Back to Product</a>
    </form>
</div>
