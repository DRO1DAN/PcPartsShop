@model PcPartsShopDomain.Model.Gpu

@{
    ViewData["Title"] = "Create GPU";
}

<h1 class="mb-4">Create GPU</h1>

<div class="card shadow p-4">
    <form asp-action="Create">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Series"></label>
            <input asp-for="Series" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Generation"></label>
            <input asp-for="Generation" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="MemoryAmount"></label>
            <input asp-for="MemoryAmount" class="form-control" type="number" step="0.1" min="0" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="MemoryType"></label>
            <input asp-for="MemoryType" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="BaseClock"></label>
            <input asp-for="BaseClock" class="form-control" type="number" step="0.01" min="0" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="BoostClock"></label>
            <input asp-for="BoostClock" class="form-control" type="number" step="0.01" min="0" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="PcieVersion"></label>
            <input asp-for="PcieVersion" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="PcieCount"></label>
            <input asp-for="PcieCount" class="form-control" type="number" step="1" min="0" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Tdp"></label>
            <input asp-for="Tdp" class="form-control" type="number" min="0" />
        </div>

        <button type="submit" class="btn btn-primary">Create GPU</button>
        <a asp-action="CleanupOrphanedProduct" asp-controller="Products" asp-route-productId="@Model.ProductId" class="btn btn-secondary">Cancel</a>
    </form>
</div
