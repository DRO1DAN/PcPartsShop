@model PcPartsShopDomain.Model.Gpu

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Gpu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ProductId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Series" class="control-label"></label>
                <input asp-for="Series" class="form-control" />
                <span asp-validation-for="Series" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Generation" class="control-label"></label>
                <input asp-for="Generation" class="form-control" />
                <span asp-validation-for="Generation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MemoryAmount" class="control-label"></label>
                <input asp-for="MemoryAmount" class="form-control" type="number" step="0.1" min="0"/>
                <span asp-validation-for="MemoryAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MemoryType" class="control-label"></label>
                <input asp-for="MemoryType" class="form-control" />
                <span asp-validation-for="MemoryType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BaseClock" class="control-label"></label>
                <input asp-for="BaseClock" class="form-control" type="number" step="0.01" min="0"/>
                <span asp-validation-for="BaseClock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BoostClock" class="control-label"></label>
                <input asp-for="BoostClock" class="form-control" type="number" step="0.01" min="0"/>
                <span asp-validation-for="BoostClock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PcieVersion" class="control-label"></label>
                <input asp-for="PcieVersion" class="form-control" />
                <span asp-validation-for="PcieVersion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PcieCount" class="control-label"></label>
                <input asp-for="PcieCount" class="form-control" type="number" step="1" min="0" />
                <span asp-validation-for="PcieCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tdp" class="control-label"></label>
                <input asp-for="Tdp" class="form-control" type="number" min="0" />
                <span asp-validation-for="Tdp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CleanupOrphanedProduct" asp-controller="Products" asp-route-productId="@Model.ProductId">Скасувати створення</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
